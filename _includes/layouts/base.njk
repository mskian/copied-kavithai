    {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"publisher": {
		"@type": "Organization",
		"name": "{{ title or site.title }}",
		"url": "{{ "/" | url(true) }}",
		"logo": {
			"@type": "ImageObject",
			"url": "https://images.weserv.nl/?url=https://kavithai.tamilsms.blog/wp-content/uploads/2022/07/copied-kavithai.png&w=60&h=60",
			"width": 60,
			"height": 60
		}
	},
	"url": "{{ url | url(true) }}",
	"image": {
		"@type": "ImageObject",
		"url": "{{ metas.image }}",
		"width": 1200,
		"height": 630
	},
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": "{{ url | url(true) }}"
	},
	"description": "{{ description or site.description }}"
}
    </script>
    {% endif %}

  {% if type === 'posts' %}
  <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Article",
        "publisher": {
            "@type": "Organization",
            "name": "{{ site.title }}",
            "url": "{{ "/" | url(true) }}",
            "logo": {
                "@type": "ImageObject",
                "url": "https://images.weserv.nl/?url=https://kavithai.tamilsms.blog/wp-content/uploads/2022/07/copied-kavithai.png&w=60&h=60",
                "width": 60,
                "height": 60
            }
        },
        "author": {
            "@type": "Person",
            "name": "Tamil SMS",
            "image": {
                "@type": "ImageObject",
                "url": "https://images.weserv.nl/?url=https://kavithai.tamilsms.blog/wp-content/uploads/2022/07/copied-kavithai.png&w=250&h=250",
                "width": 250,
                "height": 250
            },
            "url": "{{ "/" | url(true) }}",
            "sameAs": [
                "https://instagram.com/copiedkavithai",
                "https://twitter.com/copiedkavithai"
            ]
        },
        "headline": "{{ title or site.title }}",
        "url": "{{ url | url(true) }}",
        "datePublished": "{{date | date("ATOM")}}",
        "dateModified": "{{updated_date | date("ATOM")}}",
        "image": {
            "@type": "ImageObject",
            "url": "{{ metas.image }}",
            "width": 1200,
            "height": 630
        },
        "keywords": "{{ tags }}",
        "description": "{{ description or site.description }}",
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ "/" | url(true) }}"
        }
    }
  </script>
  {% endif %}

